<h1>Portfolio Items</h1>

<p><%= link_to "Create New Portfolio", new_portfolio_path %></p>

<% @portfolio_items.each do |portfolio_item| %>
	<p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
	<p><%= portfolio_item.subtitle %></p>
	<p><%= portfolio_item.body %></p>
	<p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></p>
	<p>
		<%= link_to "Edit", edit_portfolio_path(portfolio_item) %>
		<%= link_to "Delete", portfolio_item, method: :delete, data: {confirn: "Are you sure you want to delete this portfolio?"} %>
	</p>
<% end %>